{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfigPath": "nixpacks.toml",
        "buildCommand": "npm install && npm run build && python3 -m pip install -r src/backend/requirements.txt"
    },
    "deploy": {
        "startCommand": "cd src/backend && python3 -m uvicorn main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}